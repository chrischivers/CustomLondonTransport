<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SetParameters">

    <TextView
        android:id="@+id/welcomeTextID"
        android:text="@string/welcome"
        android:textColor="@color/black_text"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/welcomeTextID"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout2"
        android:layout_alignBottom="@+id/linearLayout">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/transportModeSpinner"
            android:spinnerMode="dropdown"
            android:layout_above="@+id/StartingStopLabel"
            android:layout_alignLeft="@+id/DirectionSpinner"
            android:layout_alignStart="@+id/DirectionSpinner"
            android:gravity="center_vertical|left" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/RouteLineSpinner"
            android:spinnerMode="dropdown"
            android:layout_alignTop="@+id/RouteLineLabel"
            android:layout_toRightOf="@+id/welcomeTextID"
            android:gravity="center_vertical|left" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/StartingStopSpinner"
            android:spinnerMode="dropdown"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addRouteToUserListButton"
            android:gravity="center_vertical|left" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/DirectionSpinner"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/RouteLineSpinner"
            android:layout_alignLeft="@+id/RouteLineSpinner"
            android:layout_alignStart="@+id/RouteLineSpinner"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/welcomeTextID"
        android:layout_below="@+id/welcomeTextID"
        android:id="@+id/linearLayout"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/frameLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/TransportModeLabel"
            android:id="@+id/TransportModeLabel"
            android:textSize="@dimen/menuTextSize"
            android:layout_above="@+id/StartingStopSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/RouteLineLabel"
            android:id="@+id/RouteLineLabel"
            android:textSize="@dimen/menuTextSize"
            android:layout_below="@+id/transportMode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/StartingStopLabel"
            android:id="@+id/StartingStopLabel"
            android:textSize="@dimen/menuTextSize"
            android:layout_below="@+id/DirectionSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/DirectionLabel"
            android:id="@+id/DirectionLabel"
            android:textSize="@dimen/menuTextSize"
            android:layout_alignTop="@+id/DirectionSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/addRouteToUserListButton"
            android:layout_gravity="center"
            android:onClick="addAndReturnToUserListView" />
    </FrameLayout>


</RelativeLayout>
