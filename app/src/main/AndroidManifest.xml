<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.customlondontransport">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="London Transport Query Builder"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.customlondontransport.UserListView"
            android:label="London Transport Query Builder" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
        android:name="com.customlondontransport.AddNewRoute"
        android:label="Add A New Route"
        />

        <activity
            android:name="com.customlondontransport.AddNewStation"
            android:label="Add A New Station"
            />

        <activity
            android:name="com.customlondontransport.SetDayTimeConditions"
            android:label="Set Conditions"
            />

        <activity
            android:name="com.customlondontransport.QueryResults"
            android:label="Query Output"
            />

        <activity
            android:name="com.customlondontransport.Settings"
            android:label="Settings"
            />



        <receiver android:name="com.customlondontransport.AppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="AUTO_UPDATE" />
                <action android:name="REFRESH" />
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget"/>
        </receiver>
    </application>

</manifest>
